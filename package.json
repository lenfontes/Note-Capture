{
  "name": "notecapture",
  "version": "1.0.0",
  "description": "Chrome extension for capturing and organizing notes with Google Docs integration",
  "type": "module",
  "main": "background.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "build": "webpack --mode production",
    "build:extension": "npm run build && cp extension-dist/manifest.json extension-dist/popup.html extension-dist/settings.html extension-dist/onboarding.html extension-dist/styles.css extension-dist/ && mkdir -p extension-dist/images && cp extension-dist/icons/* extension-dist/images/",
    "dev": "webpack --mode development --watch"
  },
  "keywords": [
    "chrome-extension",
    "google-docs",
    "notes"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.24.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.0",
    "babel-jest": "^27.5.1",
    "babel-loader": "^9.1.3",
    "chrome-mock": "^0.0.9",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "style-loader": "^4.0.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4"
  }
}
